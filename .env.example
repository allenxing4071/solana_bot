# Solana 网络配置
SOLANA_NETWORK=mainnet-beta
SOLANA_RPC_URL=https://your-rpc-endpoint.com
SOLANA_WS_URL=wss://your-ws-endpoint.com

# 钱包配置 - 注意：私钥仅用于开发，生产环境建议使用更安全的密钥管理方式
WALLET_PRIVATE_KEY=your_private_key_here
MAX_TRANSACTION_AMOUNT=1.0  # 每笔交易最大SOL金额

# API配置
HELIUS_API_KEY=your_helius_api_key_here
JUPITER_API_URL=https://quote-api.jup.ag/v4

# DEX程序ID - Solana主网
RAYDIUM_PROGRAM_ID=675kPX9MHTjS2zt1qfr1NYHuzeLXfQM9H24wFSUt1Mp8
ORCA_PROGRAM_ID=9W959DqEETiGZocYWCQPaJ6sBmUzgfxXfqGeTEdp3aQP

# 交易配置
TX_RETRY_COUNT=3
TX_CONFIRM_TIMEOUT=60000  # 毫秒
TX_PRIORITY_FEE=0.000005  # SOL

# 策略配置
BUY_AMOUNT_SOL=0.1
TAKE_PROFIT_PERCENTAGE=20  # 20%
STOP_LOSS_PERCENTAGE=10    # 10%
MAX_BUY_SLIPPAGE=5         # 5%
MAX_SELL_SLIPPAGE=5        # 5%

# 监控配置
HEALTH_CHECK_INTERVAL=30000  # 毫秒
PRICE_CHECK_INTERVAL=5000    # 毫秒

# 日志配置
LOG_LEVEL=info  # debug, info, warn, error
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/bot.log

# Jito MEV配置（可选）
USE_JITO_BUNDLE=false
JITO_AUTH_KEYPAIR=your_jito_keypair_path_here

# 通知配置（可选）
ENABLE_TELEGRAM_NOTIFICATIONS=false
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# 白名单/黑名单配置路径
TOKEN_WHITELIST_PATH=./config/whitelist.json
TOKEN_BLACKLIST_PATH=./config/blacklist.json 