# Solana MEV Bot 核心配置
# --------------------------

# 基础配置 
# --------------------------
NODE_ENV=production                      # 运行环境 (development/production)
LOG_LEVEL=info                           # 日志级别 (debug/info/warn/error)
LISTEN_ONLY=false                        # 是否仅监听模式 (true=只监听不交易)

# Solana 网络配置
# --------------------------
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com    # 主RPC节点
SOLANA_WS_URL=wss://api.mainnet-beta.solana.com       # WebSocket节点
BACKUP_RPC_ENDPOINTS=https://api.mainnet-beta.solana.com,https://solana-api.projectserum.com  # 备用RPC节点

# 钱包配置
# --------------------------
WALLET_PRIVATE_KEY=YOUR_WALLET_PRIVATE_KEY  # 交易钱包私钥(保密!)

# 交易配置
# --------------------------
MAX_TRANSACTION_AMOUNT=0.1     # 单笔交易最大SOL金额
BUY_AMOUNT_SOL=0.05            # 默认买入SOL金额
MAX_BUY_SLIPPAGE=5             # 最大买入滑点(%)
MAX_SELL_SLIPPAGE=5            # 最大卖出滑点(%)
TX_RETRY_COUNT=3               # 交易失败重试次数
TX_CONFIRM_TIMEOUT=60000       # 交易确认超时(毫秒)
TX_PRIORITY_FEE=0.000005       # 交易优先级费用(SOL)

# 策略配置
# --------------------------
TAKE_PROFIT_PERCENTAGE=20      # 止盈百分比(%)
STOP_LOSS_PERCENTAGE=10        # 止损百分比(%)
PRICE_CHECK_INTERVAL=5000      # 价格检查间隔(毫秒)

# API服务配置
# --------------------------
ENABLE_API_SERVER=true         # 是否启用API服务器
API_PORT=8080                  # API服务器端口

# DEX配置
# --------------------------
RAYDIUM_PROGRAM_ID=675kPX9MHTjS2zt1qfr1NYHuzeLXfQM9H24wFSUt1Mp8
ORCA_PROGRAM_ID=9W959DqEETiGZocYWCQPaJ6sBmUzgfxXfqGeTEdp3aQP
JUPITER_API_URL=https://quote-api.jup.ag/v4

# 黑白名单配置
# --------------------------
TOKEN_WHITELIST_PATH=./config/whitelist.json
TOKEN_BLACKLIST_PATH=./config/blacklist.json 

# 通知配置 (可选)
# --------------------------
ENABLE_TELEGRAM_NOTIFICATIONS=false
TELEGRAM_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN
TELEGRAM_CHAT_ID=YOUR_TELEGRAM_CHAT_ID

# Jito MEV配置 (可选)
# --------------------------
USE_JITO_BUNDLE=false
JITO_AUTH_KEYPAIR=YOUR_JITO_KEYPAIR_PATH 