{
  "environment": "development",
  "api": {
    "port": 3000,
    "useMockData": false,
    "enableAuth": true,
    "apiKey": "your-api-key-here",
    "cors": {
      "origin": "*",
      "methods": ["GET", "POST", "PUT", "DELETE"],
      "allowedHeaders": ["Content-Type", "Authorization"]
    },
    "staticDir": "public"
  },
  "logging": {
    "level": "info",
    "console": true,
    "file": true,
    "filename": "logs/app.log",
    "maxFiles": 10,
    "maxSize": "10m"
  },
  "network": {
    "cluster": "mainnet-beta",
    "rpcUrl": "https://api.mainnet-beta.solana.com",
    "wsUrl": "wss://api.mainnet-beta.solana.com",
    "connection": {
      "commitment": "confirmed",
      "confirmTransactionInitialTimeout": 60000
    }
  },
  "wallet": {
    "privateKey": "5vj7FRJZjUAAhJCjNc5fjzQdJRHHePpKMZBgQ8oDZ8EqenXaH84QivVjHvCmGa9qVmSq3HE5wpXazoYtC2CVTQ5t",
    "maxTransactionAmount": 1
  },
  "dexes": [
    {
      "name": "RAYDIUM",
      "programId": "675kPX9MHTjS2zt1qfr1NYHuzeLXfQM9H24wFSUt1Mp8",
      "enabled": true
    },
    {
      "name": "ORCA",
      "programId": "9W959DqEETiGZocYWCQPaJ6sBmUzgfxXfqGeTEdp3aQP",
      "enabled": true
    }
  ],
  "monitoring": {
    "poolMonitorInterval": 5000,
    "priceCheckInterval": 30000,
    "healthCheckInterval": 60000
  },
  "trading": {
    "buyStrategy": {
      "enabled": true,
      "maxAmountPerTrade": 100,
      "maxSlippage": 0.01,
      "minConfidence": 0.8,
      "priorityFee": {
        "enabled": true,
        "multiplier": 1.5,
        "baseFee": 0.000005,
        "maxFee": 0.00001
      }
    },
    "sellStrategy": {
      "enabled": true,
      "conditions": [
        {
          "type": "price",
          "operator": ">=",
          "value": 1.2,
          "unit": "percent"
        },
        {
          "type": "price",
          "operator": "<=",
          "value": 0.9,
          "unit": "percent"
        }
      ],
      "maxSlippage": 0.01
    },
    "maxTransactionAmount": 1000,
    "buyAmountSol": 0.1,
    "maxBuySlippage": 0.01,
    "maxSellSlippage": 0.01,
    "txRetryCount": 3,
    "txConfirmTimeout": 30000,
    "txPriorityFee": 0.000005
  },
  "security": {
    "tokenValidation": {
      "useWhitelist": true,
      "useBlacklist": true,
      "whitelistPath": "config/whitelist.json",
      "blacklistPath": "config/blacklist.json",
      "minLiquidityUsd": 10000,
      "minPoolBalanceToken": 1000,
      "requireMetadata": true,
      "maxInitialPriceUsd": 0.1
    },
    "transactionSafety": {
      "simulateBeforeSend": true,
      "maxRetryCount": 3,
      "maxPendingTx": 5
    }
  },
  "notification": {
    "telegram": {
      "enabled": true,
      "botToken": null,
      "chatId": null,
      "adminChatId": null,
      "events": {
        "trade": {
          "enabled": true,
          "level": "info",
          "format": "detailed"
        },
        "error": {
          "enabled": true,
          "level": "error",
          "notifyAdmin": true
        },
        "startup": {
          "enabled": true,
          "level": "info",
          "notifyAdmin": true
        },
        "shutdown": {
          "enabled": true,
          "level": "warning",
          "notifyAdmin": true
        },
        "position": {
          "enabled": true,
          "level": "info",
          "format": "detailed"
        },
        "price": {
          "enabled": true,
          "level": "info",
          "interval": 3600
        },
        "balance": {
          "enabled": true,
          "level": "info",
          "interval": 3600
        },
        "performance": {
          "enabled": true,
          "level": "info",
          "interval": 86400
        },
        "alert": {
          "enabled": true,
          "level": "warning",
          "notifyAdmin": true
        }
      },
      "commands": {
        "enabled": true,
        "allowedUsers": [],
        "adminOnly": true
      },
      "formatting": {
        "useEmoji": true,
        "useMarkdown": true,
        "useHTML": false
      },
      "rateLimit": {
        "messagesPerMinute": 20,
        "burstSize": 5
      }
    }
  },
  "jitoMev": {
    "enabled": false,
    "tipPercent": 0.1,
    "authKeypair": null
  }
} 