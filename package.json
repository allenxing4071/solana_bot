{
  "name": "solana-mevbot",
  "version": "0.1.0",
  "description": "Solana MEV机器人 - 新币监听、抢购和自动卖出",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:listen-only": "node dist/index.js --listen-only",
    "start:api": "node dist/api-server.js",
    "api:only": "node dist/api-server.js",
    "dev": "ts-node src/index.ts",
    "dev:listen-only": "ts-node src/index.ts --listen-only",
    "dev:api": "ts-node src/api-server.ts",
    "test": "vitest",
    "test:connection": "ts-node scripts/test_connection.ts",
    "test:api": "node tests/api_test.js",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "api-docs": "apidoc -i src/api/ -o docs/api",
    "memory-report": "ts-node --expose-gc src/tools/memory_report.ts",
    "memory-monitor": "ts-node src/tools/memory_monitor.ts",
    "docker:build": "docker build -t solana-mevbot .",
    "docker:run": "docker run -p 8080:8080 solana-mevbot",
    "docker:compose": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "config:init": "ts-node scripts/config_init.ts",
    "config:update": "ts-node scripts/config_update.ts",
    "backup": "ts-node scripts/backup.ts",
    "emergency:stop": "ts-node scripts/emergency_stop.ts",
    "system:recover": "ts-node scripts/system_recover.ts",
    "status:check": "ts-node scripts/status_check.ts",
    "monitor:setup": "ts-node scripts/monitor_setup.ts",
    "db:init": "ts-node scripts/db_init.ts"
  },
  "keywords": [
    "solana",
    "blockchain",
    "mev",
    "bot",
    "trading",
    "defi"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@orca-so/sdk": "^1.2.26",
    "@project-serum/anchor": "^0.26.0",
    "@solana/spl-token": "^0.4.13",
    "@solana/spl-token-metadata": "^0.1.6",
    "@solana/web3.js": "^1.87.6",
    "axios": "^1.8.4",
    "bn.js": "^5.2.1",
    "bs58": "^6.0.0",
    "chalk": "^4.1.2",
    "config": "^3.3.9",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "filesize": "^10.1.6",
    "fs-extra": "^11.3.0",
    "lodash": "^4.17.21",
    "node-fetch": "^2.7.0",
    "node-telegram-bot-api": "^0.61.0",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "telegraf": "^4.12.2",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@babel/parser": "^7.27.0",
    "@babel/types": "^7.27.0",
    "@types/bn.js": "^5.1.1",
    "@types/config": "^3.3.3",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.14",
    "@types/lodash": "^4.17.16",
    "@types/node": "^20.4.9",
    "@types/node-telegram-bot-api": "^0.61.7",
    "@types/ws": "^8.5.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "apidoc": "^1.2.0",
    "eslint": "^8.56.0",
    "eventemitter3": "^5.0.1",
    "expect": "^29.7.0",
    "form-data": "^4.0.2",
    "jest": "^29.7.0",
    "pretty-format": "^29.7.0",
    "strip-json-comments": "^5.0.1",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "undici-types": "^7.8.0",
    "vitest": "^3.1.2"
  }
}
