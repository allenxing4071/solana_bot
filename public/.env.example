# Solana MEV机器人环境配置示例
# 复制此文件为.env并根据环境设置相应的值

# 应用环境 (development/testing/production)
APP_ENV=development

# API配置
API_PORT=3000
API_HOST=localhost

# 数据源配置
USE_MOCK_DATA=true

# Solana节点配置
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_WS_URL=wss://api.mainnet-beta.solana.com

# 钱包配置
WALLET_PRIVATE_KEY=

# 数据库配置
DB_HOST=localhost
DB_PORT=27017
DB_NAME=solana_mev
DB_USER=
DB_PASSWORD=

# 日志配置
LOG_LEVEL=info
ENABLE_CONSOLE_LOGS=true
ENABLE_FILE_LOGS=true
LOG_FILE_PATH=./logs/app.log

# 安全配置
JWT_SECRET=
CORS_ORIGIN=http://localhost:3000,http://localhost:8080

# 通知配置
ENABLE_EMAIL_NOTIFICATIONS=false
EMAIL_SERVICE=
EMAIL_USER=
EMAIL_PASSWORD=
EMAIL_RECIPIENT=

ENABLE_TELEGRAM_NOTIFICATIONS=false
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID= 